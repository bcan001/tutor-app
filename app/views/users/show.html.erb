<%= render 'shared/title', title: "My Profile Page" %>

</br>
<% if flash[:notice] %>
  <p class="notice" style="color:red;"><%= flash[:notice] %></p>
<% end %>
</br>


<div class="container">
    <div class="row">
        <div class="col-md-6">

						<h3>My Profile Info</h3>
						</br>
						<div class="well" style="background:white;">
							
							<div id="profile-pic">
								<%= gravatar_image_tag(@user.email) %>
							</div>

							</br>
							<p><strong>First Name:</strong> <%= @user.first_name %></p>
							<p><strong>Last Name:</strong> <%= @user.last_name %></p>
							<p><strong>Email:</strong> <%= @user.email %></p>
							<p><strong>Phone:</strong> <%= @user.phone %></p>
							<p><strong>Username:</strong> <%= @user.username %></p>

							<%= link_to 'Edit Profile', edit_profile_path, class: 'btn btn-primary' %>
           	</div>
					</br>
					<h3>My Schools</h3>
					</br>

					<div class="well" style="background:white;">

						<% @schools.each do |s| %>
							<h4><%= link_to s.name, school_path(s) %> </h4>
						<% end %>
					</div>
					<%= link_to "Add a new school to my list", select_school_path(@user)%>


        </div>
        <div class="col-md-6">
      
					<h3>My Favorite Courses:</h3>
					</br>
					<div class="well" style="background:white;">
						<% @user.favorites.each do |f| %>
							<p><%= link_to Course.find(f.course_id).name, school_course_path(School.find(Course.find(f.course_id).school_id),Course.find(f.course_id)) %>, <%= link_to School.find(Course.find(f.course_id).school_id).name, school_path(School.find(Course.find(f.course_id).school_id)) %></p>

						<% end %>
					</div>

        </div>

    </div>
</div>



