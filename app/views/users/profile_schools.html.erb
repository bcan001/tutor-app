<h1>My Activity</h1>
</br>
</br>

<div class="container">
  <div class="row">
    <div class="col-md-6">
			<h3>My Recent Posts:</h3>
			</br>
			<% @user.posts.limit(10).each do |p| %>
				<div class="well" style="background:white;">
					<p><%= p.school.name %></p>
					<p><%= p.course.name %></p>
					<p><strong><%= p.title %></strong></p>
					<p><%= p.description %></p>
				</div>
			<% end %>
    </div>

		
    <div class="col-md-6">
			<h3>People I'm Following:</h3>
			</br>
			<% @user.friendships.each do |f| %>
				<div class="well" style="background:white;">
					<%= gravatar_image_tag(f.friend.email) %>
					
					<p><%= f.friend.username %></p>
					<p><%= f.friend.email %></p>
					<% f.friend.schools.each do |p| %>
						<p><%= p.name %></p>
					<% end %>
					<p><%= link_to 'Remove', destroy_friend_path(f), :method => :delete %></p>
				</div>
				</br>
			<% end %>

			</br>
			
    </div>
		<%= link_to 'view all students online here', users_show_path %>
   </div>
</div>