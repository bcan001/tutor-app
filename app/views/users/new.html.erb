<h1>Sign up a New User</h1>

<%= form_for @user do |f| %>

  <p><%= f.label :first_name, 'first_name:' %></p>
  <p><%= f.text_field :first_name %></p>

  <p><%= f.label :last_name, 'last_name:' %></p>
  <p><%= f.text_field :last_name %></p>

  <p><%= f.label :email, 'Email:' %></p>
  <p><%= f.text_field :email %></p>

  <p><%= f.label :username, 'Username:' %></p>
  <p><%= f.text_field :username %></p>
  <p><%= f.label :password, 'Password:' %></p>
  <p><%= f.password_field :password %></p>

  <p><%= f.submit 'Sign up New User' %></p>

<% end %>